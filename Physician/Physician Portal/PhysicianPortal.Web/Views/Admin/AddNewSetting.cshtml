@model PhysicianPortal.Core.Data.ApplicationSetting

@using (Ajax.BeginForm("AddNewSetting", "Admin", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onAddSettingSuccess" }, new { @class = "form-horizontal", role = "form", @id = "addSettingForm" }))
{
    <div>
        @Html.AntiForgeryToken()
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 validation-summary" style="height: auto"></div>
        <div class="custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12 padding0">
            <p  class="col-lg-11 col-md-11 col-sm-11 col-xs-11" style="font:bold">Enter the Following Information</p>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12 box-sizing-border-box line-height-2_3">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="form-group  col-lg-10 col-md-10 col-sm-9 col-xs-12 box-sizing-border-box">
                @(Html.Kendo().TextBoxFor(m => m.Name)
                            .Name("name")
                            .HtmlAttributes(new { placeholder = "Enter Name", required = "required", validationmessage = "Name is Requried", @class = "form-control email login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                )
            </div>
        </div>

        <div class="custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12 padding0">
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12 box-sizing-border-box line-height-2_3">
                @Html.LabelFor(m => m.Value)
            </div>
            <div class="form-group  col-lg-10 col-md-10 col-sm-9 col-xs-12 box-sizing-border-box">
                @(Html.TextAreaFor(m => m.Value, new { placeholder = "Enter Value", required = "required", validationmessage = "Value is Required", @class = "k-textbox max-width-field dissmiss-keyboard-ipad", rows = 6, autocomplete = "off", style = "width: 100%; max-width: 100%" }))
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 box-sizing-border-box padding0" style="text-align: center; margin: 0px 0px;">
            <button type="button" onclick="submitNewSetting(this);" class="btn btn-primary login-form-field" tabindex="3">Add Setting</button>
        </div>
    </div>
}


<style>
    .custom-input-form label {
        float: left;
    }

    .padding20 {
        padding: 20px;
    }

    .valid {
        color: green;
    }

    .invalid {
        color: red;
    }
</style>


