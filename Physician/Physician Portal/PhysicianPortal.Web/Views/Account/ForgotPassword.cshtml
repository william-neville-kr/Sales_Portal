<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="padding: 0px">
    <div class="login-backgroudImage">
    </div>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div id="loginContainer" class="loginPage">
            <br />
            <br />
            <div class="well" style="background-color: rgba(255, 255, 255, 0.7); margin-top:40%">
                @Html.AntiForgeryToken()
                <img src="~/Content/images/KrogerLogo.png" class="loginLogoImage" />
                <p class="text-center" style="color: #337ab7">SPECIALTY PHARMACY</p>
                <p class="text-center" style="color: #337ab7">EXPECT MORE FROM YOUR SPECIALTY PHARMACY</p>
                <h4 class="text-center">Forget Your Password?</h4>
                <p class="text-center">Enter Your Email Address.</p>
                <br />
                <br />

                <span class="validation-summary-errors">@Html.ValidationSummary(true,"", new { @class = "text-danger" })</span>
                <div class="form-group col-lg-12 col-md-12">
                    <div class="col-lg-2 col-md-2">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-10 col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-form-field" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block login-form-field" value="Send me Email" />
                </div>
            </div>
        </div>
    }

</body>
</html>

<style>
    .validation-summary-errors ul {
        list-style: none;
        margin-left: -40px;
    }
</style>