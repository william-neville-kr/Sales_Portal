@using PhysicianPortal.Web.Models
@model ADLoginViewModel
@{
    ViewBag.Title = "Windows Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="loginPageBody" style="height: inherit;">
    <div class="login-backgroudImage"></div>
    <div class="loginCenterContainer">
        @using (Html.BeginForm("ADLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off", style = "margin: 0px;" }))
            {
            <div id="loginContainer" class="loginPage">
                <div class="well" style="background-color: rgba(255, 255, 255, 0.7); margin: 0px;">
                    @Html.AntiForgeryToken()
                    <img src="~/Content/images/KrogerLogo.png" class="loginLogoImage" />
                    <p class="text-center" style="color: #337ab7">SPECIALTY PHARMACY</p>
                    <h3 class="text-center" style="color: #337ab7">Super Admin Login</h3>
                    <p class="text-center" style="color: #337ab7">Please Enter Your Windows Credentials to Login</p>
                    <span class="validation-summary-errors">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>

                    <div class="form-group row">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control login-form-field", placeholder = "Username", autocomplete = "off" })
                        <div style="text-align: center;">
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-form-field", placeholder = "Password", autocomplete = "off" })
                        <div style="text-align: center;">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="login-form-field" style="max-width: 80%;">
                            <input type="submit" class="btn btn-primary" value="Login">

                            <input type="button" onclick="logoutUser(); return false;" class="btn btn-primary" value="Logout">

                        </div>
                    </div>
                    @*<div class="form-group row">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                            @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account", null, new { @style = "float: right;" })
                        </div>*@
                </div>
            </div>
        }
    </div>
</div>

<script>

    function logoutUser() {

        $.ajax({
            url: '@Url.Action("LogOff", "Account")',
            cache: false,
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            beforeSend: function () {
                $("#loading-image").show();
            },
            success: function (data) {

            },
            error: function (xhr) {
                console.log("An error occured: " + xhr.status + " " + xhr.statusText);
            }
        });

        window.location.href = '@Url.Content("~/Account/Login")';
    }

</script>
