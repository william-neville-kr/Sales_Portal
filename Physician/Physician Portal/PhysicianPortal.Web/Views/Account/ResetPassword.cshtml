<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="padding: 0px">
    <div class="login-backgroudImage">
    </div>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {   
        <div id="loginContainer" class="loginPage">
            <br />

            <div class="well" style="background-color: rgba(255, 255, 255, 0.7); margin-top:30%">
                @Html.AntiForgeryToken()
                <img src="~/Content/images/KrogerLogo.png" class="loginLogoImage" />
                <p class="text-center" style="color: #337ab7">SPECIALTY PHARMACY</p>
                <p class="text-center" style="color: #337ab7">EXPECT MORE FROM YOUR SPECIALTY PHARMACY</p>
                <h4 class="text-center">Reset Your Password?</h4>
                <p class="text-center">Enter Your Email Again and set a new password.</p>
                <br />
                <br />

                <span class="validation-summary-errors">@Html.ValidationSummary("", new { @class = "text-danger" })</span>
                @Html.HiddenFor(model => model.Code)
                <div class="form-group col-lg-12 col-md-12">
                    <div class="col-lg-3 col-md-3">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-lg-12 col-md-12">
                    <div class="col-lg-3 col-md-3">
                        <label>Password</label>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-lg-3 col-md-3">
                        <label>Confirm Password</label>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block login-form-field" value="Reset Password" />
                </div>
            </div>
        </div>
    }

</body>
</html>

<style>
    .validation-summary-errors ul {
        list-style: none;
        margin-left: -40px;
    }
</style>