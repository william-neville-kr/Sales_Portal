<div id="divConfirm" style="display: none;">
    <div class="alert" style="min-height: 34px; margin-bottom: 0;">
        <p id="innerContent">
            A verification email has been sent to you
            <br />
            Please click on the link that has been sent to you to verify your account
        </p>
    </div>

    <div class="pull-right">
        <button class="btn btn-success" onclick="closeKendoWindow(); return false;" style="margin: .5em .4em .5em 0;">Ok</button>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#PhoneNumber").mask("(999) 999-9999");
        $("#DateOfBirth").mask("99/99/9999");
        $("#DateOfBirth").attr("placeholder", "Date of Birth");

        $("#SSNTemp").blur(function () {
            if ($(this).val().indexOf("_") == -1 && $(this).val() != "") {
                $("#SSN").val($(this).val());
                $(this).val("*******" + $(this).val().substring(7));
            }
            else {
                $(this).val("");
            }
        });
        $("#SSNTemp").focusin(function () {

            if ($(this).val() != "") {
                $(this).val($("#SSN").val());
            }
            else {
                $("#SSN").val("");
            }
        });
    });

    function submitNewPhysicianForm() {
        var userForm = $("#addPhysicianForm");
        kendo.init(userForm);
        var validator = userForm.kendoValidator().data("kendoValidator");
        var status = $(".validation-summary");

        if (validator.validate()) {
            userForm.submit();
        }
        else {
            status.text("Please enter valid data in the fields.")
                .removeClass("valid")
                .addClass("invalid");
            return false;
        }
    }

    function OnSuccessRegister(result) {
        var success = result.success;
        var alertMessage = result.message;
        var title = result.title;

        $("#innerContent").html(alertMessage);

        if (title.indexOf("Alert") != -1) {

            $("#divConfirm .alert").addClass("alert-danger");
            $("#divConfirm .alert").removeClass("alert-success");
        }
        else {
            $("#divConfirm .alert").addClass("alert-success");
            $("#divConfirm .alert").removeClass("alert-danger");
        }

        if (success) {
            $("#divConfirm").kendoWindow({
                modal: true,
                width: 400,
                title: title,
                visible: false,
                resizable: false,
                draggable: false,
                actions: {}
            })
                .data("kendoWindow")
                .center()
                .open();
            //$.notifyBar({ html: alertMessage, cssClass: 'success', position: 'top' });
        }
        else {
            $.notifyBar({ html: alertMessage, cssClass: 'error', position: 'top' });
        }
    }

    function OnBeginRegister() {
        $("#loading-image").show();
    }

    function closeKendoWindow() {
        $("#divConfirm").data("kendoWindow").close();
    }
</script>

