                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @(Html.Kendo().MaskedTextBox()
                              .Name("SSNTemp")
                              .Mask("000-00-0000")
                              .HtmlAttributes(new { placeholder = "SSN", required = "required", validationmessage = "The SSN field is required.", @class = "form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                            )
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box-sizing-border-box" style="display: inline-block;">
                    <div class="form-group custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.LabelFor(m => m.DrivingLicenseNumber, new { @class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 row control-label" })
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @(Html.Kendo().TextBoxFor(m => m.DrivingLicenseNumber)
                                .HtmlAttributes(new { placeholder = "Driving License", @class = "form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                            )
                        </div>
                    </div>
                    <div class="form-group custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 row control-label" })
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @(Html.Kendo().TextBoxFor(m => m.PhoneNumber)
                                .HtmlAttributes(new { placeholder = "Cell Number", @class = "form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                            )
                        </div>
                    </div>
                    <div class="form-group custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.LabelFor(m => m.NPI, new { @class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 row control-label" })
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @(Html.Kendo().TextBoxFor(m => m.NPI)
                                .HtmlAttributes(new { placeholder = "NPI", @class = "form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                            )
                        </div>
                    </div>
                    <div class="form-group custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.LabelFor(m => m.Password, new { @class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 row control-label" })
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "k-textbox form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                        </div>
                    </div>
                    <div class="form-group custom-input-form col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 row control-label" })
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12 box-sizing-border-box padding0">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "k-textbox form-control login-form-field dissmiss-keyboard-ipad", autocomplete = "off" })
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 box-sizing-border-box" style="text-align: center;">
        <strong>Note: </strong>
        While submitting this form you must agree to the terms and conditions listed below
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 box-sizing-border-box" style="text-align: center; margin: 10px 0px;">
        <button type="submit" onclick="submitNewPhysicianForm(); return false;" class="btn btn-primary login-form-field" tabindex="3">Submit</button>
        <a href="@Url.RouteUrl("Default", ((Route)RouteTable.Routes["Default"]).Defaults)" class="btn btn-danger">Cancel</a>
    </div>
}

