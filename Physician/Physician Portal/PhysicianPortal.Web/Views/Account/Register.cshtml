@model PhysicianPortal.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
    ViewBag.Title = "Register";
}
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@using (Ajax.BeginForm("Register", "Account", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginRegister", OnSuccess = "OnSuccessRegister" }, new { id = "addPhysicianForm", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div style="clear: both;">
        <fieldset>
            <legend>Provider information</legend>
