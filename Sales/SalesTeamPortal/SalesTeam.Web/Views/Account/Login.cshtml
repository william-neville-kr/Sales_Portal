@model SalesTeam.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sales Insight</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/MainLayout.css" rel="stylesheet" />
</head>

<div style="text-align:center;">
    <div style="margin:auto;">
        <img src="~/Content/Images/site-logo.png" style="width:12%;">
    </div>
</div>

<br />

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" style="float: none; margin: auto; min-width: 400px;">
            <div class="panel MainDivStyling">
                <div class="panel-heading">
                    <div class="panel-title" style="color:white;">Login</div>
                </div>
                <div class="panel-body" style="padding:15px; background: #f1f1f1;">
                    <div style="padding: 5%; display: inline-block;">
                        <h4 class="text-info" style="padding:5px; margin: 0; border-bottom: 1px solid #CCC; text-align: center;">Please Enter Your Information</h4>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:5px;">
                            <label>User Name</label>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:5px;">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 input-append lock-input input-group">
                                <span class="input-group-addon"> <i class="glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Username", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:5px;">
                            <label>Password</label>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 5px;">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 input-append lock-input input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:5px;">
                            <div style="color:red;">
                                @Html.ValidationSummary(true)
                                <style>
                                    ol, ul {
                                        padding: 1%;
                                        margin-bottom: 0;
                                    }
                                </style>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 5px; text-align:right;">
                            <button type="submit" class="btn btn-primary ">
                                Login
                                <i class="icon-long-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        padding-top: 80px;
        padding-bottom: 20px;
    }
</style>
